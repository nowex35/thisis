---
import '../styles/global.css';

export interface Props {
  title: string;
}
const { title } = Astro.props;
const name = "nowex35";
const siteTitle = "Full-Stack Engineer";
---
<html lang="ja">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{title} - {name}</title>
</head>
<body class="min-h-screen bg-slate-900 text-white p-8">
  <header class="mb-8">
    <nav class="flex space-x-4">
      <a href="/" class="text-orange-400 hover:text-orange-300">Home</a>
      <a href="/diary" class="text-orange-400 hover:text-orange-300">Diary</a>
    </nav>
  </header>
  <main class="prose prose-invert mx-auto">
    <slot />
  </main>
</body>
</html>
