---
import '../styles/global.css';

export interface Props {
  title: string;
}
const { title } = Astro.props;
const name = "nowex35";
const siteTitle = "Full-Stack Engineer";
---
<html lang="ja">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{title} - {name}</title>
  <!-- Google tag (gtag.js) -->
