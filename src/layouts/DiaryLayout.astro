---
import '../styles/global.css';

export interface Props {
  title?: string;
  frontmatter?: {
    title: string;
    date: string;
  };
}

const { title, frontmatter } = Astro.props;
const name = "nowex35";

// マークダウンファイルからの場合はfrontmatter.titleを使用、
// 直接呼び出しの場合はtitleを使用
const pageTitle = frontmatter?.title || title || "日記";
---
<html lang="ja">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{pageTitle} - {name}</title>
  
  <!-- SEO Meta Tags -->
  <meta name="description" content={`${name}の日記: ${pageTitle}`} />
  <meta name="author" content={name} />
  
  <!-- Open Graph Meta Tags -->
  <meta property="og:title" content={`${pageTitle} - ${name}`} />
  <meta property="og:description" content={`${name}の日記: ${pageTitle}`} />
  <meta property="og:type" content="article" />
  {frontmatter?.date && <meta property="article:published_time" content={frontmatter.date} />}
  
  <!-- Twitter Meta Tags -->
  <meta name="twitter:card" content="summary" />
  <meta name="twitter:title" content={`${pageTitle} - ${name}`} />
  <meta name="twitter:description" content={`${name}の日記: ${pageTitle}`} />
  
  <!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-NEJDM86C2Y"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
  
    gtag('config', 'G-NEJDM86C2Y');
  </script>
</head>
<body class="min-h-screen bg-slate-900 text-white p-8">
  <header class="mb-8">
    <nav class="flex space-x-4">
      <a href="/" class="text-orange-400 hover:text-orange-300">Home</a>
      <a href="/diary" class="text-orange-400 hover:text-orange-300">Diary</a>
    </nav>
  </header>
  <main class="prose prose-invert mx-auto">
    <slot />
  </main>
</body>
</html>
