<style>
.growth-visualization {
  background: linear-gradient(135deg, rgba(15, 23, 42, 0.8) 0%, rgba(30, 41, 59, 0.8) 100%);
  border-radius: 16px;
  border: 1px solid rgba(251, 146, 60, 0.2);
  padding: 24px;
  margin: 24px 0;
  backdrop-filter: blur(10px);
}

.growth-header {
  text-align: center;
  margin-bottom: 24px;
}

.growth-title {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  font-size: 24px;
  font-weight: 700;
  color: white;
  margin-bottom: 8px;
}

.growth-icon {
  font-size: 28px;
}

.growth-subtitle {
  color: #cbd5e1;
  font-size: 16px;
}

.visualization-tabs {
  display: flex;
  justify-content: center;
  gap: 8px;
  margin-bottom: 32px;
  flex-wrap: wrap;
}

.viz-tab {
  padding: 8px 16px;
  border-radius: 20px;
  border: 1px solid rgba(251, 146, 60, 0.3);
  background: rgba(30, 41, 59, 0.5);
  color: #cbd5e1;
  font-size: 14px;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.3s ease;
}

.viz-tab:hover {
  border-color: rgba(251, 146, 60, 0.5);
  background: rgba(251, 146, 60, 0.1);
}

.viz-tab.active {
  background: rgba(251, 146, 60, 0.2);
  border-color: rgba(251, 146, 60, 0.5);
  color: #fb923d;
}

.viz-panel {
  display: none;
}

.viz-panel.active {
  display: block;
}

/* Timeline View */
.timeline-container {
  position: relative;
  padding: 20px 0;
}

.timeline-axis {
  position: relative;
  display: flex;
  flex-direction: column;
  gap: 40px;
}

.timeline-axis::before {
  content: '';
  position: absolute;
  left: 30px;
  top: 20px;
  bottom: 20px;
  width: 2px;
  background: linear-gradient(to bottom, #fb923d, rgba(251, 146, 60, 0.2));
}

.timeline-item {
  display: flex;
  align-items: flex-start;
  gap: 20px;
  position: relative;
}

.timeline-dot {
  width: 20px;
  height: 20px;
  border-radius: 50%;
  border: 3px solid rgba(15, 23, 42, 1);
  z-index: 2;
  position: relative;
}

.timeline-dot.beginner {
  background: #60a5fa;
}

.timeline-dot.intermediate {
  background: #34d399;
}

.timeline-dot.advanced {
  background: #fbbf24;
}

.timeline-dot.expert {
  background: #f97316;
}

.timeline-dot.master {
  background: #fb923d;
  box-shadow: 0 0 20px rgba(251, 146, 60, 0.5);
}

.timeline-content {
  flex: 1;
  background: rgba(30, 41, 59, 0.5);
  border: 1px solid rgba(251, 146, 60, 0.2);
  border-radius: 12px;
  padding: 20px;
  transition: all 0.3s ease;
}

.timeline-content:hover {
  border-color: rgba(251, 146, 60, 0.4);
  transform: translateY(-2px);
}

.timeline-date {
  font-size: 14px;
  font-weight: 600;
  color: #fb923d;
  margin-bottom: 8px;
}

.timeline-event h4 {
  font-size: 18px;
  font-weight: 700;
  color: white;
  margin-bottom: 8px;
}

.timeline-event p {
  color: #cbd5e1;
  font-size: 14px;
  margin-bottom: 12px;
}

.event-metrics {
  display: flex;
  gap: 16px;
  flex-wrap: wrap;
}

.metric {
  padding: 4px 8px;
  background: rgba(251, 146, 60, 0.1);
  border-radius: 12px;
  color: #fb923d;
  font-size: 12px;
  font-weight: 500;
}

/* Skills Evolution */
.skills-evolution {
  display: flex;
  flex-direction: column;
  gap: 32px;
}

.evolution-chart {
  display: flex;
  flex-direction: column;
  gap: 24px;
}

.skill-track {
  position: relative;
}

.skill-label {
  font-size: 16px;
  font-weight: 600;
  color: white;
  margin-bottom: 8px;
}

.skill-progress {
  height: 20px;
  background: rgba(30, 41, 59, 0.5);
  border-radius: 10px;
  overflow: hidden;
  position: relative;
}

.progress-bar {
  height: 100%;
  background: linear-gradient(90deg, var(--color), rgba(var(--color), 0.6));
  width: var(--progress);
  border-radius: 10px;
  transition: width 1s ease;
  position: relative;
}

.progress-bar::after {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  width: 20px;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3));
  animation: shimmer 2s infinite;
}

.skill-milestones {
  position: relative;
  height: 30px;
  margin-top: 8px;
}

.milestone {
  position: absolute;
  background: rgba(251, 146, 60, 0.2);
  border: 1px solid rgba(251, 146, 60, 0.4);
  border-radius: 8px;
  padding: 4px 8px;
  font-size: 10px;
  color: #fb923d;
  font-weight: 500;
  white-space: nowrap;
  transform: translateX(-50%);
}

.learning-insights {
  background: rgba(30, 41, 59, 0.3);
  border-radius: 12px;
  padding: 20px;
  border: 1px solid rgba(251, 146, 60, 0.1);
}

.learning-insights h4 {
  font-size: 18px;
  font-weight: 700;
  color: white;
  margin-bottom: 16px;
}

.insights-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 16px;
}

.insight-card {
  display: flex;
  gap: 12px;
  padding: 16px;
  background: rgba(30, 41, 59, 0.5);
  border-radius: 8px;
  border: 1px solid rgba(251, 146, 60, 0.2);
}

.insight-icon {
  font-size: 24px;
  flex-shrink: 0;
}

.insight-content h5 {
  font-size: 14px;
  font-weight: 600;
  color: white;
  margin-bottom: 4px;
}

.insight-content p {
  font-size: 12px;
  color: #cbd5e1;
  line-height: 1.4;
}

/* Project Impact */
.project-impact {
  display: flex;
  flex-direction: column;
  gap: 32px;
}

.impact-matrix {
  position: relative;
  height: 400px;
  background: rgba(30, 41, 59, 0.3);
  border-radius: 12px;
  border: 1px solid rgba(251, 146, 60, 0.1);
}

.matrix-axes {
  position: absolute;
  inset: 0;
}

.y-axis {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 40px;
  width: 60px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 20px 0;
}

.x-axis {
  position: absolute;
  bottom: 0;
  left: 60px;
  right: 0;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20px;
}

.axis-label {
  font-size: 12px;
  color: #cbd5e1;
  font-weight: 600;
  writing-mode: vertical-rl;
  text-orientation: mixed;
}

.x-axis .axis-label {
  writing-mode: horizontal-tb;
}

.axis-ticks {
  display: flex;
  flex-direction: column;
  gap: 8px;
  font-size: 10px;
  color: #64748b;
}

.x-axis .axis-ticks {
  flex-direction: row;
  gap: 16px;
}

.matrix-content {
  position: absolute;
  left: 60px;
  top: 0;
  right: 0;
  bottom: 40px;
}

.project-bubble {
  position: absolute;
  width: 40px;
  height: 40px;
  background: rgba(251, 146, 60, 0.2);
  border: 2px solid #fb923d;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s ease;
  transform: translate(-50%, 50%);
}

.project-bubble:hover {
  transform: translate(-50%, 50%) scale(1.2);
  background: rgba(251, 146, 60, 0.3);
}

.bubble-icon {
  font-size: 20px;
}

.bubble-tooltip {
  position: absolute;
  bottom: 50px;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(15, 23, 42, 0.95);
  border: 1px solid rgba(251, 146, 60, 0.3);
  border-radius: 8px;
  padding: 12px;
  min-width: 150px;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
  backdrop-filter: blur(10px);
}

.project-bubble:hover .bubble-tooltip {
  opacity: 1;
}

.bubble-tooltip h5 {
  font-size: 14px;
  font-weight: 600;
  color: white;
  margin-bottom: 4px;
}

.bubble-tooltip p {
  font-size: 12px;
  color: #cbd5e1;
  line-height: 1.3;
}

.impact-metrics h4 {
  font-size: 18px;
  font-weight: 700;
  color: white;
  margin-bottom: 16px;
}

.metrics-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
  gap: 16px;
}

.metric-card {
  text-align: center;
  padding: 20px;
  background: rgba(30, 41, 59, 0.5);
  border: 1px solid rgba(251, 146, 60, 0.2);
  border-radius: 12px;
  transition: all 0.3s ease;
}

.metric-card:hover {
  border-color: rgba(251, 146, 60, 0.4);
  transform: translateY(-2px);
}

.metric-value {
  font-size: 24px;
  font-weight: 700;
  color: #fb923d;
  display: block;
  margin-bottom: 4px;
}

.metric-label {
  font-size: 12px;
  color: #cbd5e1;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

/* AI Insights */
.ai-insights {
