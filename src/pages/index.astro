---
// Astro component script (runs on the server)
import Header from '../components/Header.astro';
import Timeline from '../components/Timeline.astro';
import '../styles/global.css';

const name = "nowex35";
const title = "Japanese student engineer";
const description = "筑波大学の学生エンジニアです。";
const diaryEntries = await Astro.glob('./diary/*.md');
diaryEntries.sort((a, b) => new Date(b.frontmatter.date) - new Date(a.frontmatter.date));
const recentDiaries = diaryEntries.slice(0, 3);
---

<html lang="ja">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- SEO Meta Tags -->
    <title>{name} - {title}</title>
    <meta name="description" content={description} />
    <meta name="author" content={name} />
    <meta name="keywords" content="Full-Stack Engineer, Backend Developer, Go, TypeScript, Python, React, AWS, Mojo, Web Development" />
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content={`${name} - ${title}`} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={name} />
    
    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`${name} - ${title}`} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:creator" content="@nowex35" />
    
    <!-- Performance & Preload -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preconnect" href="https://api.github.com">
    <link rel="dns-prefetch" href="https://github.com">
    
    <!-- Structured Data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "{name}",
      "jobTitle": "{title}",
      "description": "{description}",
      "url": "https://nowex35.dev",
      "sameAs": [
        "https://github.com/nowex35",
        "https://twitter.com/nowex35",
        "https://zenn.com/nowex35"
      ],
      "knowsAbout": [
        "Go Programming",
        "TypeScript",
        "Python",
        "React",
        "AWS",
        "Backend Development",
        "Full-Stack Development"
      ]
    }
    </script>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-NEJDM86C2Y"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
    
      gtag('config', 'G-NEJDM86C2Y');
    </script>
</head>
<body>
    <!-- Skip to main content for accessibility -->
    <a href="#main" class="skip-link">Skip to main content</a>
    
    <div class="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900">
        <Header name={name} />

        <main id="main">
        <section class="hero-section pt-20 sm:pt-24 pb-4 sm:pb-4 px-4 sm:px-6" aria-label="Hero section">
            <div class="max-w-4xl mx-auto text-center">
                <div class="relative">
                    <h1 class="text-3xl sm:text-5xl md:text-6xl font-bold text-white">
                        <span class="bg-gradient-to-r from-orange-400 via-red-500 to-orange-600 bg-clip-text text-transparent">
                            {name}
                        </span>
                    </h1>
                    <div class="absolute -top-1 -right-1 sm:-top-2 sm:-right-2 text-xl sm:text-3xl animate-pulse">🔥</div>
                </div>
                <p class="text-base sm:text-lg md:text-xl text-gray-300 mb-3">{title}</p>
                <p class="text-sm sm:text-base text-gray-400 max-w-xl mx-auto mb-3 px-4">{description}</p>
            </div>
        </section>
        <section id="about" class="py-4 sm:py-8 px-4 sm:px-6">
            <div class="max-w-3xl mx-auto text-center">
                <h2 class="text-xl sm:text-2xl font-bold text-white mb-4 sm:mb-6">
                    <span class="border-b-2 border-orange-500 pb-1">About Me</span>
                </h2>
                <div class="space-y-3 sm:space-y-4">
                    <p class="text-gray-300 text-sm sm:text-base leading-relaxed">
                        バックエンドを中心にwebアプリケーション開発に取り組んでいますがフロントエンドやインフラ構築にも興味があります。
                        アプリの実装にとどまらず、そこで使われる技術にも興味がありサーバーサイドフレームワークの制作等にも取り組んでいます。
                    </p>
                    <p class="text-gray-300 text-sm sm:text-base leading-relaxed">
                        スポーツビジネス領域、エンタメ領域で働くITエンジニアに興味があります。
                    </p>
                </div>
            </div>
        </section>
        <section class="py-4 sm:py-5 px-4 sm:px-6 bg-slate-800/40">
            <div class="max-w-4xl mx-auto">
                <h2 class="text-2xl sm:text-3xl font-bold text-white mb-4 sm:mb-6">
                    <a href="/diary" class="border-b-2 border-orange-500 pb-1 hover:text-orange-400">最近の日記</a>
                </h2>
                <ul class="space-y-2">
                    {recentDiaries.map(entry => (
                        <li>
                            <a href={entry.url} class="text-orange-400 hover:underline">
                                {entry.frontmatter.date.slice(0, 10)} - {entry.frontmatter.title}
                            </a>
                        </li>
                    ))}
                </ul>
            </div>
        </section>
        <section class="py-4 sm:py-5 px-4 sm:px-6 bg-slate-800/40">
            <div class="max-w-4xl mx-auto">
                <Timeline />
            </div>
        </section>
        <!-- Projects Section -->
        <section id="projects" class="py-16 sm:py-20 px-4 sm:px-6">
            <div class="max-w-6xl mx-auto">
                <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-white mb-8 sm:mb-12 text-center">
                    <span class="border-b-4 border-orange-500 pb-2">Projects</span>
                </h2>
                <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
                    <div class="bg-gradient-to-br from-slate-700/50 to-slate-800/50 p-6 rounded-xl border border-orange-500/20 hover:border-orange-400/40 transition-all duration-300">
                        <div class="flex items-center mb-4">
                            <span class="text-2xl mr-3">🔥</span>
                            <h3 class="text-xl font-semibold text-white">Mojo Web-Framework</h3>
                        </div>
                        <p class="text-gray-300 mb-4">
                            MojoにおけるWebAPIフレームワークの作成。
                            Web開発における基盤技術を学びながら、発展途上の言語コミュニティへの貢献を目指す。
                        </p>
                        <div class="flex flex-wrap gap-2">
                            <span class="px-2 py-1 bg-orange-500/20 text-orange-300 rounded text-xs">Mojo</span>
                            <span class="px-2 py-1 bg-red-500/20 text-red-300 rounded text-xs">WebFramework</span>
                        </div>
                    </div>

                    <div class="bg-gradient-to-br from-slate-700/50 to-slate-800/50 p-6 rounded-xl border border-orange-500/20 hover:border-orange-400/40 transition-all duration-300">
                        <div class="flex items-center mb-4">
                            <span class="text-2xl mr-3">⚡</span>
                            <h3 class="text-xl font-semibold text-white">Event Management App</h3>
                        </div>
                        <p class="text-gray-300 mb-4">
                            GoとTypescriptを用いたモダンな技術スタックで学生の交流促進を目指すイベント管理アプリの制作
                            開発中心メンバーとして要件定義・設計からコーディングまでを一貫して関わる。
                        </p>
                        <div class="flex flex-wrap gap-2">
                            <span class="px-2 py-1 bg-blue-500/20 text-blue-300 rounded text-xs">Go</span>
                            <span class="px-2 py-1 bg-green-500/20 text-green-300 rounded text-xs">Next</span>
                        </div>
                    </div>

                    <div class="bg-gradient-to-br from-slate-700/50 to-slate-800/50 p-6 rounded-xl border border-orange-500/20 hover:border-orange-400/40 transition-all duration-300">
                        <div class="flex items-center mb-4">
                            <span class="text-2xl mr-3">🚀</span>
                            <h3 class="text-xl font-semibold text-white">Virtual Try-On App</h3>
                        </div>
                        <p class="text-gray-300 mb-4">
                            仮想試着技術(VTON)を用いて、気軽に服を「選ぶ」「探す」事ができるモバイルアプリを開発中。
                            主に、画像やレコメンドを扱うバックエンドを担当。
                        </p>
                        <div class="flex flex-wrap gap-2">
                            <span class="px-2 py-1 bg-purple-500/20 text-purple-300 rounded text-xs">FastAPI</span>
                            <span class="px-2 py-1 bg-yellow-500/20 text-yellow-300 rounded text-xs">Docker</span>
                            <span class="px-2 py-1 bg-orange-500/20 text-yellow-300 rounded text-xs">AWS</span>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Links Section -->
        <section id="links" class="py-16 sm:py-20 px-4 sm:px-6">
            <div class="max-w-4xl mx-auto text-center">
                <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-white mb-8 sm:mb-12">
                    <span class="border-b-4 border-orange-500 pb-2">Links</span>
                </h2>
                <div class="flex flex-wrap justify-center gap-4 sm:gap-8">
                    <a href="https://github.com/nowex35" target="_blank" rel="noopener noreferrer" 
                       class="flex items-center space-x-3 text-gray-300 hover:text-orange-400 transition-colors group">
                        <svg class="w-6 h-6 group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
                        </svg>
                        <span class="font-medium">GitHub</span>
                    </a>
                    
                    <a href="https://x.com/nowex35" target="_blank" rel="noopener noreferrer" 
                       class="flex items-center space-x-3 text-gray-300 hover:text-orange-400 transition-colors group">
                        <svg class="w-6 h-6 group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                        </svg>
                        <span class="font-medium">X</span>
                    </a>
                    
                    <a href="https://zenn.dev/nowex35" target="_blank" rel="noopener noreferrer" 
                       class="flex items-center space-x-3 text-gray-300 hover:text-orange-400 transition-colors group">
                        <svg class="w-6 h-6 group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M.264 23.771h4.984c.264 0 .498-.147.645-.381L19.614.874c.176-.293-.029-.645-.381-.645h-4.72c-.264 0-.498.147-.645.381L.249 23.39c-.176.293.029.645.381.645l-.366-.264zm23.090-10.984L20.396 8.22c-.176-.234-.44-.381-.733-.381H15.93c-.351 0-.557.352-.381.645l2.643 4.567c.176.234.44.381.733.381h3.733c.351 0 .557-.352.381-.645z"/>
                        </svg>
                        <span class="font-medium">Zenn</span>
                    </a>
                    <!-- <a href="mailto:contact@nowex35.dev" class="flex items-center space-x-2 text-gray-300 hover:text-orange-400 transition-colors">
                        <span class="text-2xl">📧</span>
                        <span>Email</span>
                    </a> -->
                </div>
            </div>
        </section>


        <!-- Footer -->
        <footer class="py-6 sm:py-8 px-4 sm:px-6 border-t border-orange-500/20">
            <div class="max-w-6xl mx-auto text-center">
                <p class="text-gray-400">
                    © 2025 {name}. Built with Astro.
                </p>
            </div>
        </footer>
        </main>
    </div>

    <script>
        // Smooth scrolling for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>
</body>
</html>
