---
// Astro component script (runs on the server)
import Header from '../components/Header.astro';
import Timeline from '../components/Timeline.astro';
import '../styles/global.css';

const name = "nowex35";
const title = "Japanese student engineer";
const description = "筑波大学の学生エンジニアです。";
const diaryEntries = await Astro.glob('./diary/*.md');
diaryEntries.sort((a, b) => new Date(b.frontmatter.date) - new Date(a.frontmatter.date));
const recentDiaries = diaryEntries.slice(0, 3);
---

<html lang="ja">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- SEO Meta Tags -->
    <title>{name} - {title}</title>
    <meta name="description" content={description} />
    <meta name="author" content={name} />
    <meta name="keywords" content="Full-Stack Engineer, Backend Developer, Go, TypeScript, Python, React, AWS, Mojo, Web Development" />

    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content={`${name} - ${title}`} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={name} />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`${name} - ${title}`} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:creator" content="@nowex35" />

    <!-- Performance & Preload -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <!-- Structured Data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "{name}",
      "jobTitle": "{title}",
      "description": "{description}",
      "url": "https://nowex35.dev",
      "sameAs": [
        "https://github.com/nowex35",
        "https://twitter.com/nowex35",
        "https://zenn.com/nowex35"
      ],
      "knowsAbout": [
        "Go Programming",
        "TypeScript",
        "Python",
        "React",
        "AWS",
        "Backend Development",
        "Full-Stack Development"
      ]
    }
    </script>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-NEJDM86C2Y"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-NEJDM86C2Y');
    </script>
</head>
<body>
    <!-- Skip to main content for accessibility -->
    <a href="#main" class="skip-link">Skip to main content</a>

    <div class="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900">
        <Header name={name} />

        <main id="main">
        <section class="hero-section pt-32 sm:pt-40 pb-16 sm:pb-20 px-4 sm:px-6" aria-label="Hero section">
            <div class="max-w-6xl mx-auto text-center">
                <div class="relative inline-block">
                    <h1 class="text-5xl sm:text-7xl md:text-8xl font-black text-white tracking-tight leading-none mb-6">
                        <span class="bg-gradient-to-r from-orange-400 via-red-500 to-orange-600 bg-clip-text text-transparent">
                            {name}
                        </span>
                    </h1>
                </div>
                <p class="text-xl sm:text-2xl md:text-3xl text-white font-semibold mb-4 tracking-wide">{title}</p>
                <p class="text-base sm:text-lg md:text-xl text-gray-400 max-w-2xl mx-auto mb-8 px-4 leading-relaxed">{description}</p>
            </div>
        </section>
        <section id="about" class="py-16 sm:py-20 px-4 sm:px-6">
            <div class="max-w-4xl mx-auto text-center">
                <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-white mb-8 sm:mb-12 tracking-tight">
                    <span class="inline-block border-b-4 border-orange-500 pb-2">About Me</span>
                </h2>
                <div class="space-y-6 sm:space-y-8">
                    <p class="text-gray-300 text-lg sm:text-xl md:text-2xl leading-relaxed font-light">
                        バックエンドを中心にwebアプリケーション開発に取り組んでいますがフロントエンドやインフラ構築にも興味があります。
                        アプリの実装にとどまらず、そこで使われる技術にも興味がありサーバーサイドフレームワークの制作等にも取り組んでいます。
                    </p>
                </div>
            </div>
        </section>
        <section class="py-16 sm:py-20 px-4 sm:px-6 bg-slate-800/40">
            <div class="max-w-6xl mx-auto">
                <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-white mb-10 sm:mb-14 tracking-tight">
                    <a href="/diary" class="inline-block border-b-4 border-orange-500 pb-2 hover:text-orange-400 transition-colors">最近の日記</a>
                </h2>
                <ul class="space-y-4 sm:space-y-6">
                    {recentDiaries.map(entry => (
                        <li class="group">
                            <a href={entry.url} class="text-orange-400 hover:text-orange-300 transition-colors text-lg sm:text-xl md:text-2xl font-medium block">
                                <span class="text-gray-500 font-normal">{entry.frontmatter.date.slice(0, 10)}</span> — {entry.frontmatter.title}
                            </a>
                        </li>
                    ))}
                </ul>
            </div>
        </section>
        <section class="py-16 sm:py-20 px-4 sm:px-6 bg-slate-800/40">
            <div class="max-w-6xl mx-auto">
                <Timeline />
            </div>
        </section>
        <!-- Projects Section -->
        <section id="projects" class="py-20 sm:py-28 px-4 sm:px-6">
            <div class="max-w-7xl mx-auto">
                <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-white mb-12 sm:mb-16 text-center tracking-tight">
                    <span class="inline-block border-b-4 border-orange-500 pb-2">Projects</span>
                </h2>
                <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-10">
                    <div class="bg-gradient-to-br from-slate-700/50 to-slate-800/50 p-8 rounded-2xl border border-orange-500/20 hover:border-orange-400/60 hover:shadow-2xl hover:shadow-orange-500/10 transition-all duration-300 group">
                        <div class="flex items-center mb-6">
                            <span class="text-4xl mr-4 group-hover:scale-110 transition-transform">🔥</span>
                            <h3 class="text-2xl font-bold text-white tracking-tight">Mojo Web-Framework</h3>
                        </div>
                        <p class="text-gray-300 text-base sm:text-lg mb-6 leading-relaxed">
                            MojoにおけるWebAPIフレームワークの作成。
                            Web開発における基盤技術を学びながら、発展途上の言語コミュニティへの貢献を目指す。
                        </p>
                        <div class="flex flex-wrap gap-3">
                            <span class="px-3 py-1.5 bg-orange-500/20 text-orange-300 rounded-lg text-sm font-medium">Mojo</span>
                            <span class="px-3 py-1.5 bg-red-500/20 text-red-300 rounded-lg text-sm font-medium">WebFramework</span>
                        </div>
                    </div>

                    <div class="bg-gradient-to-br from-slate-700/50 to-slate-800/50 p-8 rounded-2xl border border-orange-500/20 hover:border-orange-400/60 hover:shadow-2xl hover:shadow-orange-500/10 transition-all duration-300 group">
                        <div class="flex items-center mb-6">
                            <span class="text-4xl mr-4 group-hover:scale-110 transition-transform">⚡</span>
                            <h3 class="text-2xl font-bold text-white tracking-tight">Event Management App</h3>
                        </div>
                        <p class="text-gray-300 text-base sm:text-lg mb-6 leading-relaxed">
                            GoとTypescriptを用いたモダンな技術スタックで学生の交流促進を目指すイベント管理アプリの制作
                            開発中心メンバーとして要件定義・設計からコーディングまでを一貫して関わる。
                        </p>
                        <div class="flex flex-wrap gap-3">
                            <span class="px-3 py-1.5 bg-blue-500/20 text-blue-300 rounded-lg text-sm font-medium">Go</span>
                            <span class="px-3 py-1.5 bg-green-500/20 text-green-300 rounded-lg text-sm font-medium">Next</span>
                        </div>
                    </div>

                    <div class="bg-gradient-to-br from-slate-700/50 to-slate-800/50 p-8 rounded-2xl border border-orange-500/20 hover:border-orange-400/60 hover:shadow-2xl hover:shadow-orange-500/10 transition-all duration-300 group">
                        <div class="flex items-center mb-6">
                            <span class="text-4xl mr-4 group-hover:scale-110 transition-transform">🚀</span>
                            <h3 class="text-2xl font-bold text-white tracking-tight">Virtual Try-On App</h3>
                        </div>
                        <p class="text-gray-300 text-base sm:text-lg mb-6 leading-relaxed">
                            仮想試着技術(VTON)を用いて、気軽に服を「選ぶ」「探す」事ができるモバイルアプリを開発中。
                            主に、画像やレコメンドを扱うバックエンドを担当。
                        </p>
                        <div class="flex flex-wrap gap-3">
                            <span class="px-3 py-1.5 bg-purple-500/20 text-purple-300 rounded-lg text-sm font-medium">FastAPI</span>
                            <span class="px-3 py-1.5 bg-yellow-500/20 text-yellow-300 rounded-lg text-sm font-medium">Docker</span>
                            <span class="px-3 py-1.5 bg-orange-500/20 text-yellow-300 rounded-lg text-sm font-medium">AWS</span>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Links Section -->
        <section id="links" class="py-20 sm:py-28 px-4 sm:px-6">
            <div class="max-w-5xl mx-auto text-center">
                <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-white mb-12 sm:mb-16 tracking-tight">
                    <span class="inline-block border-b-4 border-orange-500 pb-2">Links</span>
                </h2>
                <div class="flex flex-wrap justify-center gap-6 sm:gap-12">
                    <a href="https://github.com/nowex35" target="_blank" rel="noopener noreferrer"
                       class="flex items-center space-x-4 text-gray-300 hover:text-orange-400 transition-all group hover:scale-105">
                        <svg class="w-8 h-8 sm:w-10 sm:h-10 group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
                        </svg>
                        <span class="text-lg sm:text-xl font-semibold">GitHub</span>
                    </a>

                    <a href="https://x.com/nowex35" target="_blank" rel="noopener noreferrer"
                       class="flex items-center space-x-4 text-gray-300 hover:text-orange-400 transition-all group hover:scale-105">
                        <svg class="w-8 h-8 sm:w-10 sm:h-10 group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                        </svg>
                        <span class="text-lg sm:text-xl font-semibold">X</span>
                    </a>

                    <a href="https://zenn.dev/nowex35" target="_blank" rel="noopener noreferrer"
                       class="flex items-center space-x-4 text-gray-300 hover:text-orange-400 transition-all group hover:scale-105">
                        <svg class="w-8 h-8 sm:w-10 sm:h-10 group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M.264 23.771h4.984c.264 0 .498-.147.645-.381L19.614.874c.176-.293-.029-.645-.381-.645h-4.72c-.264 0-.498.147-.645.381L.249 23.39c-.176.293.029.645.381.645l-.366-.264zm23.090-10.984L20.396 8.22c-.176-.234-.44-.381-.733-.381H15.93c-.351 0-.557.352-.381.645l2.643 4.567c.176.234.44.381.733.381h3.733c.351 0 .557-.352.381-.645z"/>
                        </svg>
                        <span class="text-lg sm:text-xl font-semibold">Zenn</span>
                    </a>
                </div>
            </div>
        </section>

        <!-- Footer -->
        <footer class="py-10 sm:py-12 px-4 sm:px-6 border-t border-orange-500/20">
            <div class="max-w-7xl mx-auto text-center">
                <p class="text-gray-400 text-base sm:text-lg">
                    © 2025 {name}. Built with Astro.
                </p>
            </div>
        </footer>
        </main>
    </div>
</body>
</html>
