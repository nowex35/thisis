---
// Astro component script (runs on the server)
import Header from '../components/Header.astro';
import SkillNavigator from '../components/SkillNavigator.astro';
import GitHubStats from '../components/GitHubStats.astro';
import GrowthVisualization from '../components/GrowthVisualization.astro';

const name = "nowex35";
const title = "Full-Stack Engineer";
const description = "Backend-focused engineer with expertise in frontend, infrastructure, and business understanding";
const diaryEntries = await Astro.glob('./diary/*.md');
diaryEntries.sort((a, b) => new Date(b.frontmatter.date) - new Date(a.frontmatter.date));
const recentDiaries = diaryEntries.slice(0, 3);
---

<html lang="ja">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- SEO Meta Tags -->
    <title>{name} - {title}</title>
    <meta name="description" content={description} />
    <meta name="author" content={name} />
    <meta name="keywords" content="Full-Stack Engineer, Backend Developer, Go, TypeScript, Python, React, AWS, Mojo, Web Development" />
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content={`${name} - ${title}`} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={name} />
    
    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`${name} - ${title}`} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:creator" content="@nowex35" />
    
    <!-- Performance & Preload -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preconnect" href="https://api.github.com">
    <link rel="dns-prefetch" href="https://github.com">
    
    <!-- Structured Data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "{name}",
      "jobTitle": "{title}",
      "description": "{description}",
      "url": "https://nowex35.dev",
      "sameAs": [
        "https://github.com/nowex35",
        "https://twitter.com/nowex35",
        "https://zenn.com/nowex35"
      ],
      "knowsAbout": [
        "Go Programming",
        "TypeScript",
        "Python",
        "React",
        "AWS",
        "Backend Development",
        "Full-Stack Development"
      ]
    }
    </script>
    
    <link rel="stylesheet" href="/src/styles/global.css">
</head>
<body>
    <!-- Skip to main content for accessibility -->
    <a href="#main" class="skip-link">Skip to main content</a>
    
    <div class="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900">
        <Header name={name} />

        <!-- Hero Section -->
        <main id="main">
        <section class="hero-section pt-24 sm:pt-32 pb-16 sm:pb-20 px-4 sm:px-6" aria-label="Hero section">
            <div class="max-w-6xl mx-auto text-center">
                <div class="relative">
                    <h1 class="text-4xl sm:text-6xl md:text-8xl font-bold text-white mb-6">
                        <span class="bg-gradient-to-r from-orange-400 via-red-500 to-orange-600 bg-clip-text text-transparent">
                            {name}
                        </span>
                    </h1>
                    <div class="absolute -top-2 -right-2 sm:-top-4 sm:-right-4 text-2xl sm:text-4xl animate-pulse">🔥</div>
                </div>
                <p class="text-lg sm:text-xl md:text-2xl text-gray-300 mb-4">{title}</p>
                <p class="text-base sm:text-lg text-gray-400 max-w-2xl mx-auto mb-8 px-4">{description}</p>
                <div class="flex flex-wrap justify-center gap-2 sm:gap-4 px-4">
                    <span class="px-3 py-2 sm:px-4 bg-orange-500/20 text-orange-300 rounded-full text-xs sm:text-sm border border-orange-500/30">Backend</span>
                    <span class="px-3 py-2 sm:px-4 bg-red-500/20 text-red-300 rounded-full text-xs sm:text-sm border border-red-500/30">Frontend</span>
                    <span class="px-3 py-2 sm:px-4 bg-yellow-500/20 text-yellow-300 rounded-full text-xs sm:text-sm border border-yellow-500/30">Infrastructure</span>
                    <span class="px-3 py-2 sm:px-4 bg-orange-600/20 text-orange-300 rounded-full text-xs sm:text-sm border border-orange-600/30">Business</span>
                </div>
            </div>
        </section>

        <!-- Latest Diary Section -->
        <section class="py-8 sm:py-10 px-4 sm:px-6 bg-slate-800/40">
            <div class="max-w-4xl mx-auto">
                <h2 class="text-2xl sm:text-3xl font-bold text-white mb-4 sm:mb-6">
                    <a href="/diary" class="border-b-2 border-orange-500 pb-1 hover:text-orange-400">最近の日記</a>
                </h2>
                <ul class="space-y-2">
                    {recentDiaries.map(entry => (
                        <li>
                            <a href={entry.url} class="text-orange-400 hover:underline">
                                {entry.frontmatter.date.slice(0, 10)} - {entry.frontmatter.title}
                            </a>
                        </li>
                    ))}
                </ul>
                
                <!-- GitHub Stats Integration -->
                <GitHubStats />
                
                <!-- Growth Visualization Integration -->
                <GrowthVisualization />
            </div>
        </section>

        <!-- About Section -->
        <section id="about" class="py-16 sm:py-20 px-4 sm:px-6">
            <div class="max-w-4xl mx-auto">
                <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-white mb-8 sm:mb-12 text-center">
                    <span class="border-b-4 border-orange-500 pb-2">About Me</span>
                </h2>
                <div class="grid md:grid-cols-2 gap-8 sm:gap-12 items-center">
                    <div>
                        <p class="text-gray-300 text-base sm:text-lg leading-relaxed mb-4 sm:mb-6">
                            バックエンドエンジニアとして、堅牢で拡張性の高いシステム設計を得意としています。
                            同時に、フロントエンド開発、インフラ構築、ビジネス理解にも深い知見を持ち、
                            プロダクト全体を俯瞰した開発を行います。
                        </p>
                        <p class="text-gray-300 text-base sm:text-lg leading-relaxed">
                            特に、Mojoなどの最新技術にも積極的に取り組み、
                            新規のWebフレームワークの開発や
                            GPUプログラミングにも興味を持っています。
                        </p>
                    </div>
                    <!-- 3D Skill Navigator Integration - Full Width -->
                    <div class="col-span-2">
                        <div class="bg-gradient-to-br from-orange-500/10 to-red-500/10 p-8 rounded-2xl border border-orange-500/20">
                            <h3 class="text-xl font-semibold text-white mb-4">Core Skills</h3>
                            <SkillNavigator />
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Experience & Education Section -->
        <section id="experience" class="py-16 sm:py-20 px-4 sm:px-6 bg-slate-800/50">
            <div class="max-w-4xl mx-auto">
                <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-white mb-8 sm:mb-12 text-center">
                    <span class="border-b-4 border-orange-500 pb-2">Experience & Education</span>
                </h2>
                
                
                <!-- Experience -->
                <div class="mb-16">
                    <h3 class="text-2xl font-semibold text-orange-400 mb-8 flex items-center">
                        <span class="mr-2">💻</span> Development Experience
                    </h3>
                    <div class="space-y-8">
                        <div class="bg-slate-700/30 p-6 rounded-xl border border-orange-500/20">
                            <div class="flex justify-between items-start mb-4">
                                <div>
                                    <h4 class="text-xl font-semibold text-white">Full-Stack Developer</h4>
                                    <p class="text-orange-300">with my fellows</p>
                                </div>
                                <span class="text-gray-400 text-sm">2025-2 - Present</span>
                            </div>
                            <p class="text-gray-300">
                                実運用を目標とした学生向けイベント管理アプリの設計・実装、API開発、
                                チーム全体の技術的意思決定にも参画。
                            </p>
                        </div>
                        <div class="bg-slate-700/30 p-6 rounded-xl border border-orange-500/20">
                            <div class="flex justify-between items-start mb-4">
                                <div>
                                    <h4 class="text-xl font-semibold text-white">Frontend Developer</h4>
                                    <p class="text-orange-300">with my fellows</p>
                                </div>
                                <span class="text-gray-400 text-sm">2024 - 2025</span>
                            </div>
                            <p class="text-gray-300">
								実行委員としても関わっている学園祭の公式ホームページを作成。
                                要件定義からデザイン、フロントエンドの実装までを担当
                            </p>
                        </div>
                    </div>
                </div>
                <!-- Experience -->
                <div class="mb-16">
                    <h3 class="text-2xl font-semibold text-orange-400 mb-8 flex items-center">
                        <span class="mr-2">💼</span> Work Experience
                    </h3>
                    <div class="space-y-8">
                        <div class="bg-slate-700/30 p-6 rounded-xl border border-orange-500/20">
                            <div class="flex justify-between items-start mb-4">
                                <div>
                                    <h4 class="text-xl font-semibold text-white">Junior Engineer</h4>
                                    <p class="text-orange-300">Tech Company</p>
                                </div>
                                <span class="text-gray-400 text-sm">2024-1 - 2024-8</span>
                            </div>
                            <p class="text-gray-300">
                                建築関連ソフトウェアの開発に携わる。実務の現場に出社して働き、社会人エンジニアとしての働き方も学ぶ。
                            </p>
                        </div>
                        
                    </div>
                </div>

                <!-- Education -->
                <div>
                    <h3 class="text-2xl font-semibold text-orange-400 mb-8 flex items-center">
                        <span class="mr-2">🎓</span> Education
                    </h3>
                    <div class="bg-slate-700/30 p-6 rounded-xl border border-orange-500/20">
                        <div class="flex justify-between items-start mb-4">
                            <div>
                                <h4 class="text-xl font-semibold text-white">Computer Science</h4>
                                <p class="text-orange-300">University of Tsukuba</p>
                            </div>
                            <span class="text-gray-400 text-sm">2023 - Present</span>
                        </div>
                        <p class="text-gray-300">
                            コンピュータサイエンスの基礎から応用まで学習。
                            アルゴリズム、データ構造、システム設計の知識を習得。
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Projects Section -->
        <section id="projects" class="py-16 sm:py-20 px-4 sm:px-6">
            <div class="max-w-6xl mx-auto">
                <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-white mb-8 sm:mb-12 text-center">
                    <span class="border-b-4 border-orange-500 pb-2">Projects</span>
                </h2>
                <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
                    <div class="bg-gradient-to-br from-slate-700/50 to-slate-800/50 p-6 rounded-xl border border-orange-500/20 hover:border-orange-400/40 transition-all duration-300">
                        <div class="flex items-center mb-4">
                            <span class="text-2xl mr-3">🔥</span>
                            <h3 class="text-xl font-semibold text-white">Mojo Web-Framework</h3>
                        </div>
                        <p class="text-gray-300 mb-4">
                            MojoにおけるWebAPIフレームワークの作成。
                            Web開発における基盤技術を学びながら、発展途上の言語コミュニティへの貢献を目指す。
                        </p>
                        <div class="flex flex-wrap gap-2">
                            <span class="px-2 py-1 bg-orange-500/20 text-orange-300 rounded text-xs">Mojo</span>
                            <span class="px-2 py-1 bg-red-500/20 text-red-300 rounded text-xs">WebFramework</span>
                        </div>
                    </div>

                    <div class="bg-gradient-to-br from-slate-700/50 to-slate-800/50 p-6 rounded-xl border border-orange-500/20 hover:border-orange-400/40 transition-all duration-300">
                        <div class="flex items-center mb-4">
                            <span class="text-2xl mr-3">⚡</span>
                            <h3 class="text-xl font-semibold text-white">Event Management App</h3>
                        </div>
                        <p class="text-gray-300 mb-4">
                            GoとTypescriptを用いたモダンな技術スタックで学生の交流促進を目指すイベント管理アプリの制作
                            開発中心メンバーとして要件定義・設計からコーディングまでを一貫して関わる。
                        </p>
                        <div class="flex flex-wrap gap-2">
                            <span class="px-2 py-1 bg-blue-500/20 text-blue-300 rounded text-xs">Go</span>
                            <span class="px-2 py-1 bg-green-500/20 text-green-300 rounded text-xs">Next</span>
                        </div>
                    </div>

                    <div class="bg-gradient-to-br from-slate-700/50 to-slate-800/50 p-6 rounded-xl border border-orange-500/20 hover:border-orange-400/40 transition-all duration-300">
                        <div class="flex items-center mb-4">
                            <span class="text-2xl mr-3">🚀</span>
                            <h3 class="text-xl font-semibold text-white">Virtual Try-On App</h3>
                        </div>
                        <p class="text-gray-300 mb-4">
                            仮想試着技術(VTON)を用いて、気軽に服を「選ぶ」「探す」事ができるモバイルアプリを開発中。
                            主に、画像やレコメンドを扱うバックエンドを担当。
                        </p>
                        <div class="flex flex-wrap gap-2">
                            <span class="px-2 py-1 bg-purple-500/20 text-purple-300 rounded text-xs">FastAPI</span>
                            <span class="px-2 py-1 bg-yellow-500/20 text-yellow-300 rounded text-xs">Docker</span>
                            <span class="px-2 py-1 bg-orange-500/20 text-yellow-300 rounded text-xs">AWS</span>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Hobbies Section -->
        <section class="py-16 sm:py-20 px-4 sm:px-6 bg-slate-800/50">
            <div class="max-w-4xl mx-auto">
                <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-white mb-8 sm:mb-12 text-center">
                    <span class="border-b-4 border-orange-500 pb-2">Hobbies & Interests</span>
                </h2>
                <div class="grid grid-cols-2 md:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6">
                    <div class="text-center p-6 bg-slate-700/30 rounded-xl border border-orange-500/20">
                        <div class="text-4xl mb-4">📚</div>
                        <h3 class="text-lg font-semibold text-white mb-2">Tech Reading</h3>
                        <p class="text-gray-300 text-sm">最新技術の学習と研究</p>
                    </div>
                    <div class="text-center p-6 bg-slate-700/30 rounded-xl border border-orange-500/20">
                        <div class="text-4xl mb-4">💻</div>
                        <h3 class="text-lg font-semibold text-white mb-2">Open Source</h3>
                        <p class="text-gray-300 text-sm">オープンソースプロジェクトへの貢献</p>
                    </div>
                    <div class="text-center p-6 bg-slate-700/30 rounded-xl border border-orange-500/20">
                        <div class="text-4xl mb-4">🏀</div>
                        <h3 class="text-lg font-semibold text-white mb-2">Basketball</h3>
                        <p class="text-gray-300 text-sm">小学生から続けており、現在はサークル活動に参加。</p>
                    </div>
                    <div class="text-center p-6 bg-slate-700/30 rounded-xl border border-orange-500/20">
                        <div class="text-4xl mb-4">🏀⚽🏐</div>
                        <h3 class="text-lg font-semibold text-white mb-2">Sports</h3>
                        <p class="text-gray-300 text-sm">バスケを筆頭に様々な種類のスポーツ観戦</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Contact Section -->
        <section id="contact" class="py-16 sm:py-20 px-4 sm:px-6">
            <div class="max-w-4xl mx-auto text-center">
                <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-white mb-8 sm:mb-12">
                    <span class="border-b-4 border-orange-500 pb-2">SNS</span>
                </h2>
                <div class="flex flex-wrap justify-center gap-4 sm:gap-8">
                    <a href="https://github.com/nowex35" class="flex items-center space-x-2 text-gray-300 hover:text-orange-400 transition-colors">
                        <span class="text-2xl">📱</span>
                        <span>GitHub</span>
                    </a>
                    <a href="https://X.com/nowex35" class="flex items-center space-x-2 text-gray-300 hover:text-orange-400 transition-colors">
                        <span class="text-2xl">🐦</span>
                        <span>X</span>
                    </a>
                    <a href="https://zenn.com/nowex35" class="flex items-center space-x-2 text-gray-300 hover:text-orange-400 transition-colors">
                        <span class="text-2xl">📘</span>
                        <span>Zenn</span>
                    </a>
                    <!-- <a href="mailto:contact@nowex35.dev" class="flex items-center space-x-2 text-gray-300 hover:text-orange-400 transition-colors">
                        <span class="text-2xl">📧</span>
                        <span>Email</span>
                    </a> -->
                </div>
            </div>
        </section>

        <!-- Live Code Playground Section -->
        <!-- <section class="py-16 sm:py-20 px-4 sm:px-6">
            <div class="max-w-6xl mx-auto">
                <LiveCodePlayground />
            </div>
        </section> -->

        <!-- Footer -->
        <footer class="py-6 sm:py-8 px-4 sm:px-6 border-t border-orange-500/20">
            <div class="max-w-6xl mx-auto text-center">
                <p class="text-gray-400">
                    こちらのサイトはAIコーディングを用いて更新されています。確認漏れにより事実と異なる場合がございます。
                </p>
                <p class="text-gray-400">
                    © 2025 {name}. Built with Astro. Coded by Codex, Claude code, and Cursor.
                </p>
            </div>
        </footer>
        </main>
    </div>

    <script>
        // Smooth scrolling for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>
</body>
</html>
